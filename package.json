  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:server\" \"npm:vite\"",
    "server": "tsx watch server/index.ts",
    "vite": "vite",
    "build": "tsc -b && vite build",
    "build:server": "tsc -p tsconfig.server.json",
